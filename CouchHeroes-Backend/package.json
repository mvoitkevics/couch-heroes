{
  "name": "couch-heroes-backend",
  "version": "0.0.1",
  "description": "CouchHeroes-Backend",
  "main": "server.js",
  "author": {
    "name": ""
  },
  "scripts": {
    "start": "npm run serve",
    "dev": "npm-run-all --parallel server client",
    "server": "npm-run-all --parallel server:*",
    "server:webpack": "webpack --config webpack/webpack.server.js --watch",
    "server:nodemon": "nodemon dist/server/server.js",
    "client": "webpack --config webpack/webpack.client.js --watch",
    "build": "webpack --config webpack/webpack.client.js && webpack --config webpack/webpack.server.js",
    "serve": "node dist/server/server.js",
    "prettier": "prettier --write 'src/**/*.ts'",
    "docker:start": "npm i --only=production && npm run serve",
    "docker:publish": "npm run build && docker-compose up -d --build",
    "docker:up": "docker-compose up -d --build"
  },
  "dependencies": {
    "@geckos.io/phaser-on-nodejs": "^1.0.0",
    "axios": "^0.18.0",
    "compression": "^1.7.4",
    "ejs": "^2.6.1",
    "express": "^4.16.4",
    "helmet": "^3.16.0",
    "moment": "^2.24.0",
    "pidusage": "^2.0.17",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "source-map-support": "^0.5.11",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/compression": "0.0.36",
    "@types/express": "^4.16.1",
    "@types/helmet": "0.0.43",
    "@types/jsdom": "^12.2.3",
    "@types/node": "^11.11.3",
    "@types/pidusage": "^2.0.1",
    "@types/socket.io": "^2.1.2",
    "@types/socket.io-client": "^1.4.32",
    "@types/uuid": "^3.4.4",
    "copy-webpack-plugin": "^5.0.1",
    "html-webpack-plugin": "^3.2.0",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "object-sizeof": "^1.3.0",
    "ts-loader": "^5.3.3",
    "typescript": "^3.3.3333",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^1.7.2"
  }
}
